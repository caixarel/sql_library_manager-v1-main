extends layout.pug 
block content 
    if bookValues
        h1 Update Book
        h2.error Oooops!
        ul.error
            li Title is required
            li Author is required      
            li=errors
        form(action=`/books/${bookValues.id}` method='post') 
            p
                label(for='title') Title
                input#title(name='title' type='text' value=`${bookValues.title}`)
            p
                label(for='author') Author
                input#author(name='author' type='text' value=`${bookValues.author}`)
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value=`${bookValues.genre}`)
            p
                label(for='year') Year
                input#year(name='year' type='text' value=`${bookValues.year}`)
            p
                input(type='submit' value='Update Book')
            p
                a.button(href='/') Cancel
    else
        h1 New Book
        h2.error Oooops!
        ul.error
            li Title is required
            li Author is required
            li=errors
        form(action="/books/new" method='post') 
            p
                label(for='title') Title
                input#title(name='title' type='text')
            p
                label(for='author') Author
                input#author(name='author' type='text')
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text')
            p
                label(for='year') Year
                input#year(name='year' type='text')
            p
                input(type='submit' value='Create New Book')
            p
                a.button(href='/') Cancel